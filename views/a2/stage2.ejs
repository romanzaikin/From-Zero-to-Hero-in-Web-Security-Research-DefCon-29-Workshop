	<script src="/assets/js/jwt-decode.js"></script>
	<script>
		$.ajax({
			url: "/api/login_jwt/",
			type: "POST",
			contentType: "application/json",
			data: JSON.stringify({}),
			success: function(data)
			{
				localStorage.setItem("jwt",data.token);

				$("#creds").val(jwt_decode(data.token).username);
				$("#role").val(jwt_decode(data.token).role);
			}
		});

		$("#search").click(function () {
			$.ajax({
				url: "/api/login_jwt_relogin/",
				type: "POST",
				contentType: "application/json",
				data: JSON.stringify({"jwt":localStorage.getItem("jwt")}),
				success: function(data)
				{
					$("#creds").val(data.username);
					$("#role").val(data.role);
				}
			});
		});
	</script>
